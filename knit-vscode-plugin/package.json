{
  "name": "knit-vscode-plugin",
  "displayName": "Knit VSCode Plugin",
  "description": "Knit development tools with Gradle watcher and dependency graph panel.",
  "version": "0.0.1",
  "engines": { "vscode": "^1.103.0" },
  "categories": ["Other"],
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "knit-vscode-plugin.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "knit.watchJar",
        "title": "Knit: Watch and Build ShadowJar"
      }
    ],
      "keybindings": [
    {
      "command": "knit.openDiagramPanel",
      "key": "ctrl+alt+d"
    },
    {
      "command": "knit.closeDiagramPanel",
      "key": "ctrl+alt+f"
    } 
    ]
},
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}